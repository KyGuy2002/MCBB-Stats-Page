<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/_head-stats') %>
    </head>
    <%- include('../../partials/_header') %>
    <%- include('../../partials/_stats-nav') %>

    <body>
        <div class="grid-container"> <!-- Container -->
            <%- include('../../partials/_general-stats') %> <!-- General Box -->
            <div animate class="main box"> <!-- Main Box -->



                <!-- ======= Common ======= -->
                <div id="cs-container" class="cs-container">

                    <!-- Item -->
                    <div id="cs-0" class="inner-box tooltipparent" style="visibility:hidden">
                        <i class="c-stats fa-solid fa-coins" style="color:rgb(255, 230, 0); font-size: 21px;"></i>
                        <h1 id='cs-stat' class="c-stats">STAT</h1>
                        <h1 id='cs-value' class="c-stats c-stats-value">VALUE</h1>
                        <span class="tooltip">
                            <h1 class="t-heading">WHAT IS IT</h1>
                            <h1 id='cs-t_what' class="t-text">T_WHAT</h1>
                            <h1 class="t-heading">HOW TO</h1>
                            <h1 id='cs-t_how' class="t-text">T_HOW</h1>
                        </span>
                    </div>

                </div>



                <!-- ======= Inventory ======= -->
                <h1 class="heading" style="margin-top: 30px;">Inventory</h1>
                <div style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
                    <div>
                        <hr class="g-line">
                    </div>
                </div>
                <%- include('../../partials/_inventory') %>



                <!-- ======= Other Stats ======= -->
                <h1 class="heading" style="margin-top: 30px;">Other Stats</h1>
                <div style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
                    <div>
                        <hr class="g-line">
                    </div>
                </div>

                <!-- Item -->
                <div id="os-container" style="visibility:hidden">
                    <div id="os-0" class="o-stats">
                        <div class="tooltipparent" style="display: inline;">
                            <span class="fa-stack fa-2x" style="font-size: 15px;">
                                <i class="fa-solid fa-circle fa-stack-2x" style="color:var(--green)"></i>
                                <i class="fa-solid fa-shield-halved fa-stack-1x" style="color:white"></i>
                            </span>
                            <h1 id='os-stat' class="c-stats">STAT</h1>
                            <h1 id='os-value' class="c-stats c-stats-value">VALUE</h1>

                            <span class="tooltip">
                                <h1 class="t-heading">WHAT IS IT</h1>
                                <h1 id='os-t_what' class="t-text">T_WHAT</h1>
                                <h1 class="t-heading">HOW TO</h1>
                                <h1 id='os-t_how' class="t-text">T_HOW</h1>
                            </span>
                        </div>
                    </div>
                </div>



            </div>
        </div>
        <script src="/MCBB-Stats-Page/js/pages/stats/themeparks.js"></script>
        <%- include('../../partials/_stats-scripts') %>
    </body>
</html>