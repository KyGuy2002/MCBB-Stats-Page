<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/_head-stats') %>
    </head>
    <%- include('../../partials/_header') %>
    <%- include('../../partials/_stats-nav') %>

    <body>
        <div class="grid-container"> <!-- Container -->
            <%- include('../../partials/_general-stats') %> <!-- General Box -->
            <div class="box main pad"> <!-- Main Box -->



                <!-- Recent Games -->
                <h1 class="heading">Recent Games <span><a class="more-details" href="/">View All</a></span></h1>
                <div style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
                    <div>
                        <hr class="g-line">
                    </div>
                </div>
                <table id="rg-table">
                    <tr>
                        <th>Date</th>
                        <th>Duration</th>
                        <th>Role</th>
                        <th>Winner</th>
                        <th>Modifiers</th>
                        <th>Details</th>
                    </tr>
                    <!-- Row is duplicated in stats.js -->
                    <tr id="rg-0" style="visibility:hidden">
                        <td id="rg-date">DATE</td>
                        <td id="rg-duration">DURATION</td>
                        <td id="rg-role">ROLE</td>
                        <td id="rg-winner">WINNER</td>
                        <td id="rg-mods">MODS</td>
                        <td><button class="rg-details"><i class="fa-solid fa-angle-right"></i></button></td>
                    </tr>
                </table>



                <!-- Leveling / Tiers -->
                <h1 class="heading" style="margin-top: 30px;">Leveling / Tiers</h1>
                <div style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
                    <div>
                        <hr class="g-line">
                    </div>
                </div>
                
                <div class="level-box-container">
                    <!-- Item -->
                    <div id="l-0" class="level-box inner-box tooltipparent">
                        <h1 class="lb-title">Level Name</h1>

                        <!-- Circle -->
                        <div class="circle">
                            <h1>#</h1> <!-- Current Level -->
                        </div>

                        <h1 class="lb-next-label">Next Tier</h1>
                        <h1 class="lb-next-value">### / ####</h1>

                        <span class="tooltip">
                            <h1 class="t-heading">WHAT IS IT</h1>
                            <h1 id='lb-t_what' class="t-text">T_WHAT</h1>
                            <h1 class="t-heading">HOW TO</h1>
                            <h1 id='lb-t_how' class="t-text">T_HOW</h1>
                        </span>
                    </div>
                </div>



                <!-- Other Stats -->
                <h1 class="heading" style="margin-top: 30px;">Other Stats</h1>
                <div style="display: flex; justify-content: flex-start; margin-bottom: 20px;">
                    <div>
                        <hr class="g-line">
                    </div>
                </div>

                <!-- Item -->
                <div id="os-container" style="visibility:hidden">
                    <div id="os-0" class="o-stats">
                        <div class="tooltipparent" style="display: inline;">
                            <span class="fa-stack fa-2x" style="font-size: 15px;">
                                <i class="fa-solid fa-circle fa-stack-2x" style="color:var(--green)"></i>
                                <i class="fa-solid fa-shield-halved fa-stack-1x" style="color:white"></i>
                            </span>
                            <h1 id='os-stat' class="c-stats">STAT</h1>
                            <h1 id='os-value' class="c-stats c-stats-value">VALUE</h1>

                            <span class="tooltip">
                                <h1 class="t-heading">WHAT IS IT</h1>
                                <h1 id='os-t_what' class="t-text">T_WHAT</h1>
                                <h1 class="t-heading">HOW TO</h1>
                                <h1 id='os-t_how' class="t-text">T_HOW</h1>
                            </span>
                        </div>
                    </div>
                </div>



            </div>
        </div>
        <script src="/js/pages/stats/manhunt.js"></script>
        <%- include('../../partials/_stats-scripts') %>
    </body>
</html>