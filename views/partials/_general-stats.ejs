<style>
    .g-name {
        font-size: 30px;
        text-align: left;
        color: #ffffff;
        margin: 10px;
    }
    .g-uuid {
        text-align: left;
        color: #a5a5a5;
        font-weight: 500;
        margin: 10px;
        font-size: 16px;
    }
    .g-character {
        margin: 0px;
        visibility: hidden;
    }
    .g-character-div {
        width: 0px;
    }
    @media only screen and (min-width: 550px) {
        .g-character {
            visibility: visible;
        }
        .g-character-div {
            width: auto;
        }
    }


    .g-stats-label {
        font-size: 15px;
        text-align: left;
        color: #ffffff;
        margin: 10px;
    }
    .g-stats-value {
        text-align: left;
        color: #a5a5a5;
        font-weight: 500;
        margin: 10px;
        font-size: 15px;
    }
</style>


<!-- General Box -->
<div class="general box">
    <div style="display: flex; justify-content: flex-start">

        <div class="g-character-div">
            <!-- <img src="https://crafatar.com/renders/body/910b8e50-7cc3-4062-8f0a-f9fbd4a9b935?overlay"> -->
            <canvas id="skin_container" class="g-character"></canvas>
            <script src="https://bs-community.github.io/skinview3d/js/skinview3d.bundle.js"></script>
            <script src="/js/pages/stats/skin.js"></script>
        </div>

        <div> 
            <h1 class="g-name">Stats for USERNAME</h1>
            <h1 class="g-uuid">UUID</h1>

            <div style="display: flex; justify-content: flex-start">
                <div>
                    <hr class="g-line">
                </div>
            </div>

            <h1 class="g-stats-label">First Joined: <span class="g-stats-value"><%= first_joined %></span></h1>
            <h1 class="g-stats-label">Last Online: <span class="g-stats-value"><%= last_online %></span></h1>
            <h1 class="g-stats-label">Current Location: <span class="g-stats-value"><%= current_loc %></span></h1>
            <h1 class="g-stats-label">Rank: <span class="g-stats-value"><%= rank %></span></h1>
        </div>

    </div>
</div>



<!-- Badges Box -->
<div class="badges box">
    <h1 class="title">Badges</h1>
</div>